{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": [
      "esnext",
      "es2019",
      "dom"
    ],
    "paths": {
      "~bootstrap/*": [
        "./node_modules/bootstrap/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ],
      "$/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "typechain",
      "typechain/factories",
      "vite-plugin-pages/client",
      "."
    ],
    "types": [
      "@types/node",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
      // "vite-plugin-pwa/client",
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "./src/pages/other/**",
    "./src/pages/test/**"
  ],
  "include": [
    "./typechain/**/*",
    "./**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.vue",
    "ssg/main.ssg.ts"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  }
}